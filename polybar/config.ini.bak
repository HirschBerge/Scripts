[colors]
background = ${xrdb:color0:#222}
#background = #222
background-alt = #444
foreground = ${xrdb:color7:#222}
#foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
include-file = ~/.config/polybar/modules.ini
include-file = ~/.config/polybar/colors.ini
include-file = ~/.config/polybar/user_modules.ini
[bar/panel]
width = 100%
;monitor = ${env:MONITOR:}
height = 28
;offset-x = 1%
;offset-y = 1%
radius = 5
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
enable-ipc = true
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2
font-0 = "Overpass:size=10"
font-1 = "Font Awesome 5 Free Solid:size=10"
font-2 = fixed:pixelsize=10;1
font-3 = unifont:fontformat=truetype:size=8:antialias=false;0
font-4 = siji:pixelsize=10;1
font-5 = "DejaVu Sans Mono:size=10"
;Bar Setup
;
;
modules-left = i3 xwindow spotify1 mpd
modules-center = filesystem
modules-right = xbacklight pulseaudio memory wireless-network network networkspeedup networkspeeddown cpu temperature battery date
;
;
;
#tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize
[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
enable-ipc = true
pseudo-transparency = false
[global/wm]
margin-top = -2
margin-bottom = -2
